.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Ensure Unix line endings and executable permissions for shell scripts
*.sh text eol=lf diff=bash

# Ensure Windows line endings for batch files
*.bat text eol=crlf

# PowerShell can handle both but CRLF is standard for Windows
*.ps1 text eol=crlf

# Lua files are cross-platform, use LF
*.lua text eol=lf

# Python scripts use LF
*.py text eol=lf

# Markdown files use LF
*.md text eol=lf
